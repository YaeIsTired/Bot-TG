            <!-- Accounts Grid -->
            <div class="accounts-grid" id="accountsGrid">
                <% if (accounts && accounts.length > 0) { %>
                    <% accounts.forEach(account => { %>
                    <div class="account-card" data-account-id="<%= account.id %>" data-status="<%= account.status %>">
