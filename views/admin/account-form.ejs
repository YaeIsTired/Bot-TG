                                        <input type="text" class="form-control epic-input" id="account_status" name="account_status"
                                               placeholder="e.g., Good, Excellent, Fair"
                                               value="<%= isEdit && account ? account.account_status || '' : '' %>">
                                    </div>
                                </div>

                                <div class="form-group">
